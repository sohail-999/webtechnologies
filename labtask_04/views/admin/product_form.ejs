<div style="max-width: 700px; margin: 50px auto; padding: 25px; border: 1px solid #e0e0e0; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.1); background-color: #fcfcfc;">
    <h2 style="text-align: center; color: #333; margin-bottom: 30px;"><%= product ? 'Edit Product' : 'Add New Product' %></h2>

    <% // Display Flash Messages %>
    <% if (successMessage && successMessage.length > 0) { %>
        <div style="background-color: #d4edda; color: #155724; border: 1px solid #c3e6cb; border-radius: 5px; padding: 10px; margin-bottom: 20px; text-align: center;">
            <%= successMessage %>
        </div>
    <% } %>
    <% if (errorMessage && errorMessage.length > 0) { %>
        <div style="background-color: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; border-radius: 5px; padding: 10px; margin-bottom: 20px; text-align: center;">
            <%= errorMessage %>
        </div>
    <% } %>

    <form action="<%= product ? '/admin/products/edit/' + product._id : '/admin/products/add' %>" method="POST" style="display: flex; flex-direction: column; gap: 15px;">
        <div>
            <label for="name" style="display: block; margin-bottom: 5px; font-weight: bold; color: #555;">Product Name:</label>
            <input type="text" id="name" name="name" value="<%= product ? product.name : '' %>" required
                   style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box;">
        </div>
        <div>
            <label for="price" style="display: block; margin-bottom: 5px; font-weight: bold; color: #555;">Price:</label>
            <input type="number" id="price" name="price" value="<%= product ? product.price : '' %>" step="0.01" required
                   style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box;">
        </div>
        <div>
            <label for="description" style="display: block; margin-bottom: 5px; font-weight: bold; color: #555;">Description:</label>
            <textarea id="description" name="description" rows="5" required
                      style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; resize: vertical;"><%= product ? product.description : '' %></textarea>
        </div>
        <div>
            <label for="image" style="display: block; margin-bottom: 5px; font-weight: bold; color: #555;">Image URL:</label>
            <input type="url" id="image" name="image" value="<%= product ? product.image : '' %>" required
                   style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box;">
            <% if (product && product.image) { %>
                <img src="<%= product.image %>" alt="Current Product Image" style="max-width: 150px; height: auto; margin-top: 15px; border-radius: 5px; border: 1px solid #eee;">
            <% } %>
        </div>
        <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 20px;">
            <button type="submit" style="padding: 12px 25px; background-color: #007bff; color: white; border: none; border-radius: 5px; cursor: pointer; font-size: 1.1em; font-weight: bold;">
                <%= product ? 'Update Product' : 'Add Product' %>
            </button>
            <a href="/admin/products" style="padding: 12px 25px; background-color: #6c757d; color: white; text-decoration: none; border-radius: 5px; font-size: 1.1em; font-weight: bold;">
                Cancel
            </a>
        </div>
    </form>
</div>
