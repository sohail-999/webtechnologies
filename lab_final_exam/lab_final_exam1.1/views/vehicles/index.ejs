<%- include('../partials/header') %>  <!-- Ensure this path is correct for views/vehicles/index.ejs -->

<h1 class="mb-4 text-center text-secondary">Available Vehicles</h1>

<% if (vehicles.length > 0) { %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% vehicles.forEach(function(vehicle) { %>
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <% if (vehicle.image) { %>
                        <img src="/uploads/<%= vehicle.image %>" class="card-img-top p-3 rounded" alt="<%= vehicle.name %>" onerror="this.onerror=null;this.src='https://placehold.co/400x250/cccccc/333333?text=No+Image';">
                    <% } else { %>
                        <img src="https://placehold.co/400x250/cccccc/333333?text=No+Image" class="card-img-top p-3 rounded" alt="No Image">
                    <% } %>
                    <div class="card-body">
                        <h5 class="card-title text-primary"><%= vehicle.name %></h5>
                        <p class="card-text mb-1"><strong>Brand:</strong> <%= vehicle.brand %></p>
                        <p class="card-text mb-1"><strong>Type:</strong> <%= vehicle.type %></p>
                        <p class="card-text mb-1"><strong>Price:</strong> $<%= vehicle.price.toLocaleString() %></p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
<% } else { %>
    <div class="alert alert-info text-center" role="alert">
        No vehicles available at the moment.
    </div>
<% } %>

<%- include('../partials/footer') %>
