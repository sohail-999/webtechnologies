<div style="max-width: 1000px; margin: 50px auto; padding: 25px; border: 1px solid #e0e0e0; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.1); background-color: #fcfcfc;">
    <h2 style="text-align: center; color: #333; margin-bottom: 30px;">Admin Dashboard</h2>

    <% // Display Flash Messages %>
    <% if (successMessage && successMessage.length > 0) { %>
        <div style="background-color: #d4edda; color: #155724; border: 1px solid #c3e6cb; border-radius: 5px; padding: 10px; margin-bottom: 20px; text-align: center;">
            <%= successMessage %>
        </div>
    <% } %>
    <% if (errorMessage && errorMessage.length > 0) { %>
        <div style="background-color: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; border-radius: 5px; padding: 10px; margin-bottom: 20px; text-align: center;">
            <%= errorMessage %>
        </div>
    <% } %>

    <div style="text-align: center; margin-bottom: 30px; display: flex; justify-content: center; gap: 20px;">
        <a href="/admin/products" style="display: inline-block; padding: 12px 25px; background-color: #6200ea; color: white; text-decoration: none; border-radius: 8px; font-weight: bold; font-size: 1.1em; transition: background-color 0.3s ease;">
            Manage Products
        </a>
        <a href="/admin/orders" style="display: inline-block; padding: 12px 25px; background-color: #007bff; color: white; text-decoration: none; border-radius: 8px; font-weight: bold; font-size: 1.1em; transition: background-color 0.3s ease;">
            Manage Orders
        </a>
        <a href="/admin/vehicles" style="display: inline-block; padding: 12px 25px; background-color: #17a2b8; color: white; text-decoration: none; border-radius: 8px; font-weight: bold; font-size: 1.1em; transition: background-color 0.3s ease;">
            Manage Vehicles
        </a>
    </div>

    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 30px;">
        <!-- All Users Section -->
        <div>
            <h3 style="color: #555; margin-bottom: 15px;">All Registered Users (<%= allUsers.length %>)</h3>
            <div style="max-height: 400px; overflow-y: auto; border: 1px solid #ddd; border-radius: 5px;">
                <table style="width: 100%; border-collapse: collapse;">
                    <thead>
                        <tr style="background-color: #e9ecef;">
                            <th style="padding: 10px; border: 1px solid #ddd; text-align: left;">Username</th>
                            <th style="padding: 10px; border: 1px solid #ddd; text-align: left;">Email</th>
                            <th style="padding: 10px; border: 1px solid #ddd; text-align: center;">Admin</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (allUsers && allUsers.length > 0) { %>
                            <% allUsers.forEach(function(user) { %>
                                <% if (user.isAdmin) { %>
                                <tr style="background-color: #fffacd;">
                                <% } else { %>
                                <tr>
                                <% } %>
                                    <td style="padding: 10px; border: 1px solid #ddd;"><%= user.username %></td>
                                    <td style="padding: 10px; border: 1px solid #ddd;"><%= user.email %></td>
                                    <td style="padding: 10px; border: 1px solid #ddd; text-align: center;"><%= user.isAdmin ? 'Yes' : 'No' %></td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr><td colspan="3" style="padding: 10px; text-align: center; color: #777;">No users registered.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Recent Orders Section (Placeholder for Admin Dashboard) -->
        <div>
            <h3 style="color: #555; margin-bottom: 15px;">Recent Orders (Not Full List)</h3>
            <div style="max-height: 400px; overflow-y: auto; border: 1px solid #ddd; border-radius: 5px;">
                <p style="text-align: center; color: #777; font-size: 0.9em; margin-top: 20px;">
                    Click "Manage Orders" above for a complete list and details.
                </p>
                <p style="text-align: center; margin-top: 15px;">
                    <a href="/admin/orders" style="color: #007bff; text-decoration: none;">Go to Order Management</a>
                </p>
            </div>
        </div>
    </div>

    <div style="text-align: center; margin-top: 30px;">
        <p style="color: #777;">This is a basic admin dashboard. In a full application, you would have more robust management tools.</p>
    </div>
</div>
